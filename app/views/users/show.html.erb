<div class="postTitle">
  <%= @user.nickname %>さんの投稿一覧
</div>
<% @blogs.each do |blog| %>
  <div class="content">
    <div class="content__left">
      <div class="content__left--image"></div>
    </div>
    <div class="content__right">
      <div class="content__right__top">
        <%= link_to blog.title, blog_path(blog.id), class: "content__right__top--title" %>
      </div>
      <div class="content__right__bottom">
        <div class="content__right__bottom--userName">
          <%= link_to blog.user.nickname, user_path(blog.user), class: "content__right__bottom--userName--btn" %>
        </div>
        <div class="content__right__bottom--date">
          <%= blog.created_at %>
        </div>
      </div>
    </div>
  </div>
<% end %>