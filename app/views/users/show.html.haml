.box
  .article-list
    = @user.nickname
  .article-list2
    - @blogs.each do |blog|
      .article
        .title
          = link_to blog.title, blog_path(blog.id), class: 'blogs-title'
        .nametime
          .username
            = link_to blog.user.nickname, user_path(blog.user), class: 'blogs-user'
          .time
            =blog.created_at
    .pager
      = paginate(@blogs)
      