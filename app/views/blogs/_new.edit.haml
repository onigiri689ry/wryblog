.container
  .new-blog
    = form_for(@blog) do |f|
      .field
        .field-label
          = f.label :tag,"タグ"
          %span.required
        .field-input
          =f.text_field :tag_name, value: @tag_list
      .write
        .write__image
          =f.label :image, "写真投稿"
          %span.required
          %p.max 最大5枚までアップロードできます
          .write__image-select
            メイン写真　　　ここをクリックしてファイルをアップロード
            %ul.write__image-select__ul
              - @blog.images.each_with_index do |image, i|
                %label{class: "write__image-select__ul-text ul-id-#{i}"}
                  = f.fields_for :images, image do |img|
                    = img.file_field :image_url,  "data-id": "#{i}"
                    %li
                    .btn-box
                      %a 編集
                      %a.delete-btn 削除
      .field
        .field-label
          = f.label :title, "タイトル"
          %span.required
        .field-input
          = f.text_field :title
      .field-body
        .field-label-body
          = f.label :body, "本文"
          %span.required
        .field-input-body
          = f.text_area :body
      .blog-actions
        = f.submit "投稿する", class: 'blog-btn'
